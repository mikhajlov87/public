/* checkbox and radiobutton style */
.checkbox.circle {
  margin-top: 0;
  margin-bottom: 0; }

.checkbox.circle input[type="checkbox"],
.checkbox.circle input[type="radio"] {
  display: none; }

.checkbox.circle input[type="checkbox"] + label,
.checkbox.circle input[type="radio"] + label {
  padding-left: 30px; }

.checkbox.circle input[type="checkbox"] + label::before,
.checkbox.circle input[type="radio"] + label::before {
  content: "";
  display: inline-block;
  height: 18px;
  width: 18px;
  position: absolute;
  top: 0;
  left: 0;
  background-image: url("../images/controls-navy.png");
  background-repeat: no-repeat; }

.checkbox.circle input[type="checkbox"] + label::before {
  background-position: -32px 0; }

.checkbox.circle input[type="radio"] + label::before {
  background-position: -30px -52px; }

.checkbox.circle input[type="checkbox"]:checked + label::before {
  background-position: -6px 0px; }

.checkbox.circle input[type="radio"]:checked + label::before {
  background-position: -4px -52px; }

.checkbox.circle input[type="checkbox"]:disabled + label::before {
  background-position: -6px -26px; }

.checkbox.circle input[type="checkbox"]:checked:disabled + label::before {
  background-position: -31px -26px; }

.checkbox.circle input[type="radio"]:disabled + label::before {
  background-position: -4px -78px; }

.checkbox.circle input[type="radio"]:checked:disabled + label::before {
  background-position: -28px -78px; }

